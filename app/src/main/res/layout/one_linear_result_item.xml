<?xml version="1.0" encoding="utf-8"?><!--remove android:hardwareAccelerated="false" in android manifest to show shadow-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/lCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:background="@android:color/white"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="24dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/positionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/circular_borders"
            android:ems="2"
            android:gravity="center"
            android:text="position"
            android:textColor="@android:color/white"
            android:transitionName="@string/transition_to_web_position" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="8"
            android:orientation="vertical">
            <TextView
                android:id="@+id/docIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Doc_id: 0/10" />
            <TextView
                android:id="@+id/urlTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                android:text="http://google.com/fvfdbgdf/fdghgh/evvfbgbg/vfvfvfdbb/bdb"/>
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:ellipsize="end"
                android:text="How to finish high school without studying" />
            <TextView
                android:id="@+id/snippetTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textStyle="italic"
                android:textSize="11sp"
                android:ellipsize="end"
                android:text="The Donald Bren Hall School is always ready to support students who have financial dificulty wihtou" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <TextView
            android:id="@+id/tfidfTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/rounded_borders"
            android:ems="5"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="18.50"
            android:textColor="#D46D22"
            android:transitionName="@string/transition_to_web_tfidf" />
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>